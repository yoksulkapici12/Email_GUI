<Window x:Class="EmailClient.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Please enter the category name:"/>
        <TextBox Style="{StaticResource DefaultTextBoxStyle}" x:Name="inputTextBox"  />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Style="{StaticResource PrimaryButtonStyle}" x:Name="okButton" Content="OK" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Style="{StaticResource PrimaryButtonStyle}" Content="Cancel" Margin="0,0,10,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
